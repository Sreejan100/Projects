<div id="passengerform" v-cloak>
  <div class="container" v-if="!cloudSuccess">
    <h1 class="text-center">Step 3:Fill your Personal details </h1>
    <p class="text-center">Fill up the form as this would be used just to store your details in our record..</p>
    <div class=" signup-form">
      <hr/>
        <ajax-form action="passengerform" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
          <div class="form-group">
            <label for="Pnr no">PNR NO</label>
            <input class="form-control" id="pnrno" type="number"  :class="[formErrors.pnrno ? 'is-invalid' : '']" v-model.trim="formData.pnrno" placeholder="1" autocomplete="pnrno" focus-first>
            <div class="invalid-feedback" v-if="formErrors.pnrno">Please enter a valid pnrno.</div>
          </div>
          <div class="form-group">
            <label for="Sex">Sex</label>
            <input class="form-control" id="sex" type="text"  :class="[formErrors.sex ? 'is-invalid' : '']" v-model.trim="formData.sex" placeholder="Male" autocomplete="sex">
            <div class="invalid-feedback" v-if="formErrors.sex">Please enter your gender.</div>
          </div>
          <div class="form-group">
            <label for="Ppno">Personal phone number</label>
            <input class="form-control" id="ppno" type="number"  :class="[formErrors.ppno ? 'is-invalid' : '']" v-model.trim="formData.ppno" placeholder="9087654321" autocomplete="ppno">
            <div class="invalid-feedback" v-if="formErrors.ppno">Please enter your phone number.</div>
          </div>
          <div class="form-group">
            <label for="age">age</label>
            <input class="form-control" id="age" type="number"  :class="[formErrors.age ? 'is-invalid' : '']" v-model.trim="formData.age" placeholder="20" autocomplete="age">
            <div class="invalid-feedback" v-if="formErrors.age">Please enter your age</div>
          </div>
          <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" id="name" type="text"  :class="[formErrors.name ? 'is-invalid' : '']" v-model.trim="formData.name" placeholder="Ryan Dahl" autocomplete="name">
            <div class="invalid-feedback" v-if="formErrors.name">Please enter your full name.</div>
          </div>
          <div class="form-group">
            <label for="Ticket no">Ticket Number</label>
            <input class="form-control" id="ticket_no" type="number"  :class="[formErrors.ticket_no ? 'is-invalid' : '']" v-model.trim="formData.ticket_no" placeholder="1" autocomplete="ticket_no" >
            <div class="invalid-feedback" v-if="formErrors.ticket_no">Please enter a valid ticket number.</div>
          </div>
        <div class="form-group form-check">
          <input class="form-check-input" id="terms-agreement" type="checkbox" v-model="formData.agreed">
          <label for="terms-agreement" class="form-check-label" :class="[formErrors.agreed ? 'text-danger' : '']">I have read &amp; agree to the <a target="_blank" href="/terms">terms of service</a>.</label>
        </div>
        <p class="text-danger" v-if="cloudError==='emailAlreadyInUse'"><small>Ticket already booked <a href="password/forgot">here</a>.</small></p>
        <p class="text-danger" v-else-if="cloudError"><small>An error occured while processing your request. Please check your information and try again, or <a href="/support">contact support</a> if the error persists.</small></p>
        <div class="form-group">
          <ajax-button type="submit" :syncing="syncing" class="btn-dark btn-lg btn-block">Book</ajax-button>
        </div>
      </ajax-form>
    </div>
  </div>
  <div class="container" v-if="cloudSuccess"> 
    <h1 class="text-center">Ticket Confirmed</h1>
     <div class="success-message"> 
       <hr/>
       <p>Your Ticket has been booked. You can go and view your ticket.</p> 
       <p><a class="btn btn-outline-info" href="/">Go to dashboard</a></p> 
     </div> 
   </div> 
</div>

<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
