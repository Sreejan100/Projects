<div id="cancellation" v-cloak>
    <div class="container" v-if="!cloudSuccess">
      <h1 class="text-center">Cancel your tickets here </h1>
      <p class="text-center">Sad to hear that you want to cancel your ticket.. </p>
      <div class=" signup-form">
        <hr/>
          <ajax-form action="cancellation" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
            <div class="form-group">
              <label for="Pnr no">PNR NO</label>
              <input class="form-control" id="pnrno" type="number"  :class="[formErrors.pnrno ? 'is-invalid' : '']" v-model.trim="formData.pnrno" placeholder="1" autocomplete="pnrno" focus-first>
              <div class="invalid-feedback" v-if="formErrors.pnrno">Please enter a valid pnrno.</div>
            </div>
            <div class="form-group">
                <label for="Status">Status</label>
                <input class="form-control" id="status" type="text"  :class="[formErrors.status ? 'is-invalid' : '']" v-model.trim="formData.status" placeholder="Confirmed" autocomplete="new-status"t>
                <div class="invalid-feedback" v-if="formErrors.status">Please enter your status.</div>
            </div>
            <div class="form-group">
                <label for="Journey Date">Journey Date</label>
                <input class="form-control" id="journey_date" type="text"  :class="[formErrors.journey_date ? 'is-invalid' : '']" v-model.trim="formData.journey_date" placeholder="11-4-2020" autocomplete="new-journey_date">
                <div class="invalid-feedback" v-if="formErrors.journey_date">Please enter your journey_date.</div>
            </div>
            <div class="form-group">
                <label for="Number of seats">Number of seats</label>
                <input class="form-control" id="no_of_seats" type="number"  :class="[formErrors.no_of_seats ? 'is-invalid' : '']" v-model.trim="formData.no_of_seats" placeholder="1" autocomplete="new-no_of_seats">
                <div class="invalid-feedback" v-if="formErrors.no_of_seats">Please enter no_of_seats booked.</div>
            </div>
            <div class="form-group">
                <label for="Contact number">Contact Number</label>
                <input class="form-control" id="contactno" type="number"  :class="[formErrors.contactno ? 'is-invalid' : '']" v-model.trim="formData.contactno" placeholder="9807654321" autocomplete="new-contactno">
                <div class="invalid-feedback" v-if="formErrors.contactno">Please enter your contactno.</div>
            </div>
            <div class="form-group">
                <label for="Ticket number">Ticket Number</label>
                <input class="form-control" id="ticket_no" type="number"  :class="[formErrors.ticket_no ? 'is-invalid' : '']" v-model.trim="formData.ticket_no" placeholder="1" autocomplete="new-ticket_no">
                <div class="invalid-feedback" v-if="formErrors.ticket_no">Please enter your contactno.</div>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input class="form-control" id="address" type="text"  :class="[formErrors.address ? 'is-invalid' : '']" v-model.trim="formData.address" placeholder="Jamshedpur" autocomplete="new-address">
                <div class="invalid-feedback" v-if="formErrors.address">Please enter your address.</div>
            </div>
            
          <div class="form-group form-check">
            <input class="form-check-input" id="terms-agreement" type="checkbox" v-model="formData.agreed">
            <label for="terms-agreement" class="form-check-label" :class="[formErrors.agreed ? 'text-danger' : '']">I have read &amp; agree to the <a target="_blank" href="/terms">terms of service</a>.</label>
          </div>
          <p class="text-danger" v-if="cloudError==='emailAlreadyInUse'"><small>Ticket already booked <a href="password/forgot">here</a>.</small></p>
          <p class="text-danger" v-else-if="cloudError"><small>An error occured while processing your request. Please check your information and try again, or <a href="/support">contact support</a> if the error persists.</small></p>
          <div class="form-group">
            <ajax-button type="submit" :syncing="syncing" class="btn-dark btn-lg btn-block">Book</ajax-button>
          </div>
        </ajax-form>
      </div>
    </div>
    <div class="container" v-if="cloudSuccess"> 
      <h1 class="text-center">Ticket Cancelled</h1>
       <div class="success-message"> 
         <hr/>
         <p>Your Ticket has been Cancelled.</p> 
         <p><a class="btn btn-outline-info" href="/">Go to dashboard</a></p> 
       </div> 
     </div> 
  </div>
  
  <%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
  