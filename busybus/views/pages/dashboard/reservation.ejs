<div id="reservation" v-cloak>
  <div class="container" v-if="!cloudSuccess">
    <h1 class="text-center">Step 1:Reservation </h1>
    <p class="text-center">Complete your first step to proceed for the next steps</p>
    <div class=" signup-form">
      <hr/>
        <ajax-form action="reservation" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
          <div class="form-group">
            <label for="Pnr no">PNR NO</label>
            <input class="form-control" id="pnrno" type="number"  :class="[formErrors.pnrno ? 'is-invalid' : '']" v-model.trim="formData.pnrno" placeholder="1" autocomplete="pnrno" focus-first>
            <div class="invalid-feedback" v-if="formErrors.pnrno">Please enter a valid pnrno.</div>
          </div>
          <div class="form-group">
            <label for="email-address">Email address</label>
            <input class="form-control" id="email-address" type="email"  :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" placeholder="sturgeon@example.com" autocomplete="email">
            <div class="invalid-feedback" v-if="formErrors.emailAddress">Please enter a valid email address.</div>
          </div>
          <div class="form-group">
            <label for="Status">Status</label>
            <input class="form-control" id="status" type="text"  :class="[formErrors.status? 'is-invalid' : '']" v-model.trim="formData.status" placeholder="confrmed" autocomplete="status">
            <div class="invalid-feedback" v-if="formErrors.status">Please enter a valid status.</div>
          </div>
          <div class="form-group">
            <label for="Contact no">Contact Number</label>
            <input class="form-control" id="contactno" type="number"  :class="[formErrors.contactno ? 'is-invalid' : '']" v-model.trim="formData.contactno" placeholder="9087654321" autocomplete="contactno">
            <div class="invalid-feedback" v-if="formErrors.contactno">Please enter a valid contact no.</div>
          </div>
          <div class="form-group">
            <label for="Address">Address</label>
            <input class="form-control" id="address" type="text"  :class="[formErrors.address ? 'is-invalid' : '']" v-model.trim="formData.address" placeholder="Jamshedpur" autocomplete="pnrno">
            <div class="invalid-feedback" v-if="formErrors.address">Please enter a valid address.</div>
          </div>
        <div class="form-group form-check">
          <input class="form-check-input" id="terms-agreement" type="checkbox" v-model="formData.agreed">
          <label for="terms-agreement" class="form-check-label" :class="[formErrors.agreed ? 'text-danger' : '']">I have read &amp; agree to the <a target="_blank" href="/terms">terms of service</a>.</label>
        </div>
        <p class="text-danger" v-if="cloudError==='emailAlreadyInUse'"><small>Ticket already booked <a href="password/forgot">here</a>.</small></p>
        <p class="text-danger" v-else-if="cloudError"><small>An error occured while processing your request. Please check your information and try again, or <a href="/support">contact support</a> if the error persists.</small></p>
        <div class="form-group">
          <ajax-button type="submit" :syncing="syncing" class="btn-dark btn-lg btn-block">Book</ajax-button>
        </div>
      </ajax-form>
    </div>
  </div>
  <div class="container" v-if="cloudSuccess"> 
    <h1 class="text-center">Complete your remaining steps</h1>
     <div class="success-message"> 
       <hr/>
       <p>Please click the button below and complete the remaining steps to confirm your ticket.</p> 
       <p><a class="btn btn-outline-info" href="/ticketform">Next Step</a></p> 
     </div> 
   </div> 
</div>
